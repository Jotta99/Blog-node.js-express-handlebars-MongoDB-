<div style="margin-top: 8rem !important;"></div>
        {{>_msg}}
{{msg_success}}

<h2>Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-outline-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4 shadow-sm p-3 mb-2 bg-body-tertiary rounded">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small><strong>Descrição:</strong> {{descricao}}</small>
            <br>
            <small><strong>Postado por:</strong> {{autorPostUser}}</small>
            <br>
            <small><strong>Data de postagem:</strong> {{date}}</small>
            <hr>
            <a href="/admin/postagens/edit/{{_id}}"><button type="button" class="btn btn-dark">Editar</button></a>
            <a href="/admin/postagens/delete/{{_id}}"><button type="button" class="btn btn-dark">Apagar</button></a>
        </div>
    </div>
{{else}}

{{/each}}