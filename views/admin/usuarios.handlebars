{{msg_success}}

<h2>Usuários</h2>
<hr>
<a href="/formulariosignup"><button class="btn btn-dark">Novo Usuário</button></a>

{{#each usuarios}}

    <div class="card mt-4 shadow-sm p-3 mb-2 bg-body-tertiary rounded">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small><strong>Email: </strong> {{email}}</small>
            <br>
            <small><strong>Data de criação:</strong> {{date}}</small>
            <hr>
            <a href="/admin/usuarios/edit/{{_id}}"><button type="button" class="btn btn-dark">Editar</button></a>
            <a href="/admin/usuarios/delete/{{_id}}"><button type="button" class="btn btn-dark">Apagar</button></a>
        </div>
    </div>
    
{{else}}

{{/each}}