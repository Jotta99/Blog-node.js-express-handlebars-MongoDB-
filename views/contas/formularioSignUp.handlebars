<div class="card mt-4 shadow-sm p-3 mb-2 bg-body-tertiary rounded">
    <div class="card-body">
        <h2>Criar Conta</h2>
        <form action="/formulariosignup/novouser" method="POST">
            <div class="form-group mt-2">
                <label for="nome">Nome</label>
                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome">
            </div>
            <div class="form-group mt-2">
                <label for="email">Endereço de Email</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Preencha seu Email">
            </div>
            <div class="form-group mt-2">
                <label for="senha ">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha">
            </div>
                <small id="info" class="form-text text-muted">Suas informações não serão compartilhadas.</small>
                <br>
            <button type="submit" class="btn btn-dark mt-2">Cadastrar</button>
        </form>
    </div>
</div>

